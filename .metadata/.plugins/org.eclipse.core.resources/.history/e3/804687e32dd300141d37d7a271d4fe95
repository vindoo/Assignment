		Scanner scan = new Scanner(System.in);
		for (i = 0; i >= 0; i++) {
			int s = scan.nextInt();

			switch (s) {

			case 0:
				System.out.println("Coke is Selected");
				//System.out.println("Enter Quantity");
               
				for (j = 0; j >= 0; j++) {
