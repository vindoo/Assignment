	public void productList() {
		HashSet<String> product = new HashSet<String>();
		for (int x = 0; x <= 4; x++) {
			product.add("COKE");
			product.add("HERSHEYS");
			product.add("WATER");
			product.add("GUM");
			product.add("CHIPS");
		}
		// Displaying all the products available
		Iterator<String> it = product.iterator();
		System.out.println("The products available are:");
		while (it.hasNext()) {
			System.out.println(it.next());
		}
	}

	public int Coke(int n0){	
			ArrayList<String> coke = new ArrayList<String>();
			coke.add("coke1");
			coke.add("coke2");
			coke.add("coke3");
			coke.add("coke4");
			coke.add("coke5");
			q = coke.size();
		
		
int c;
	 for(c=0;c<n0;c++)
	 {
      coke.remove(c);
	 }
	 q= coke.size();
	return q;
 
 
	 
 }
